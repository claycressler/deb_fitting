#include <R.h>
#include <stdio.h>

static double parms[8];

#define theta parms[0]
#define r parms[1]
#define aC parms[2]
#define hC parms[3]
#define aG parms[4]
#define hG parms[5]
#define b parms[6]
#define m parms[7]

/* initializer */
void initmod(void (* odeparms)(int *, double *)) {
  int N=8;
  odeparms(&N, parms);
}

/* derivatives */
void derivs (int *neq, double *t, double *y, double *ydot) {
  // balance the equations
  ydot[0] = theta - r*y[1] - aC*y[1]*y[2]/(hC+y[1]) - aG*y[1]*y[3]/(hG+y[1]);
  ydot[1] = b*aC*y[1]*y[2]/(hC+y[1]) - m*aG*y[1]*y[3]/(hG+y[1]);
  ydot[3] = m*aG*y[1]*y[3]/(hG+y[1]);

}

/* when t > t_rep, set C=0 */
void event(int *n, double *t, double *y) {
  y[2] = 0;
}
